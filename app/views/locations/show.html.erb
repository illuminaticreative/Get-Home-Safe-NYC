<div class="content">
	<section class="single">
		<div class="status <%=is_safe(@location)%> clearfix">
			<h2><%=safe_label(@location)%></h2>
			<h3 class="update"><%= @location.updated_at.strftime("%m/%d/%Y %I:%M%p") %></h3>
		</div>
		<div class="address clearfix">
			<p><%= @location.address %></p>
		</div>
		<ul class="statuses clearfix">
			<li class="on">Power <%= @location.power ? "On" : "Off" %></li>
			<li class="on">Water <%= @location.water ? "On" : "Off" %></li>
			<li class="on">Heat <%= @location.heat ? "On" : "Off" %></li>
			<% if @location.flooding %><li class="on">Flooded</li><% end %>
			
		</ul>
		<ul class="utility">
			<li><%= link_to "Edit this Address Â»", edit_location_path(@location) %></li>
		</ul>
		<!--<ul class="social">
			<li><a href="#">Facebook</a></li>
			<li><a href="#">Twitter</a></li>						
		</ul>-->
	</section>
</div>
