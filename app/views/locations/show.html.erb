<div class="content">
	<section class="single">
		<div class="address clearfix">
			<div class="status <%=is_safe(@location)%> clearfix">
				<h2><%=safe_label(@location)%></h2>
				<h3 class="update"><%= @location.updated_at.strftime("%m/%d/%Y %I:%M%p") %></h3>
			</div>
			<p><%= @location.address %></p>
		</div>
		<ul class="statuses clearfix">
			<li>Power: <span class="bold <%= @location.power ? "on" : "off" %>"><%= @location.power ? "On" : "Off" %></span></li>
			<li>Water: <span class="bold <%= @location.water ? "on" : "off" %>"><%= @location.water ? "On" : "Off" %></span></li>
			<li>Heat: <span class="bold <%= @location.heat ? "on" : "off" %>"><%= @location.heat ? "On" : "Off" %></span></li>
			<% if @location.flooding %><li>Flooded</li><% end %>
			<% if @location.elevators_available %><li><%= @location.elevators_safe ? "Elevators Working" : "Elevators Not Working" %></li><% end %>
		</ul>
		<ul class="utility">
			<li><%= link_to "Update this building's status Â»", edit_location_path(@location) %></li>
		</ul>
		<!--<ul class="social">
			<li><a href="#">Facebook</a></li>
			<li><a href="#">Twitter</a></li>						
		</ul>-->
	</section>
</div>
