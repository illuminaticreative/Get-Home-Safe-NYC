  })();

</script>	
</head>
<body>
	<div class="container clearfix">
	<%= render "shared/header" %>
		<div class="content clearfix">
			<div id="flash">
		  	<% if flash[:notice] %>
			    <p class="notice"><%= flash[:notice] %></p>
			<% end %>
			<% if flash[:error] %>
			    <p class="error"><%= flash[:error] %></p>
			<% end %>
		</div>
		<%= yield %>
	</div>
	<%= render "shared/right_info" %>
	<%= render "shared/footer" %>
	</div>
</body>
</html>
